@model WebApplication1.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<div class="p-4 bg-white rounded-lg shadow-sm">
    <h1 class="text-danger">Delete Instructor</h1>
    
    <h4 class="mt-4">Are you absolutely sure you want to delete this instructor?</h4>
    <p class="alert alert-warning">
        **Warning:** Deleting the instructor **@Model.Name** cannot be undone.
    </p>

    <div class="card card-body bg-light">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Salary)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>
            
            <dt class="col-sm-3 fw-bold">Department ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DeptId)</dd>
            
            <dt class="col-sm-3 fw-bold">Course ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CrsId)</dd>
        </dl>
    </div>

    <hr/>
    <form asp-action="Delete" id="deleteForm" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        
        <button type="submit" class="btn btn-danger shadow-sm">
            <i class="bi bi-trash"></i> Delete Instructor
        </button>
        
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>

@section Scripts {
    <script>
        var deleteForm = document.getElementById('deleteForm');

        deleteForm.addEventListener('submit', function(event) {
            var confirmation = confirm("Are you absolutely sure you want to delete the instructor '@Model.Name'? This action cannot be undone.");

            if (!confirmation) {
                event.preventDefault();
                console.log("Deletion cancelled by user.");
            }
        });
    </script>
}