@model WebApplication1.Models.Instructor 
@using Microsoft.AspNetCore.Mvc.Rendering 

@{
    ViewData["Title"] = $"Edit Instructor: {Model.Name}";
    // Retrieve the SelectLists passed by the controller
    SelectList departmentList = (SelectList)ViewData["Departments"];
    SelectList courseList = (SelectList)ViewData["Courses"];
}

<div class="p-4 bg-white rounded-lg">
    <h2 class="text-black text-center text-primary fw-bold">@ViewData["Title"]</h2>
    <div class="card-body">

        <form asp-action="Edit" method="post">
            
            @* REQUIRED: Hidden field to send the primary key (Id) back to the POST Edit action *@
            <input type="hidden" asp-for="Id" />
            
            @* Displays model-level validation errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 border border-danger p-2 rounded"></div>
            
            @* Name Field *@
            <div class="mb-2">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            @* Salary Field *@
            <div class="mb-2">
                <label asp-for="Salary" class="form-label fw-bold"></label>
                <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Salary" class="text-danger small"></span>
            </div>
            
            @* Address Field *@
            <div class="mb-2">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>
            
            @* Image Field was here, and has been removed. *@

            @* DeptId Dropdown List *@
            <div class="mb-2">
                <label asp-for="DeptId" class="form-label fw-bold">Department</label>
                <select asp-for="DeptId" class="form-control" asp-items="departmentList">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="DeptId" class="text-danger small"></span>
            </div>
            
            @* CrsId Dropdown List *@
            <div class="mb-2">
                <label asp-for="CrsId" class="form-label fw-bold">Course</label>
                <select asp-for="CrsId" class="form-control" asp-items="courseList">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CrsId" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between pt-3">
                <button type="submit" class="btn btn-warning shadow-sm">
                    <i class="bi bi-pencil-square"></i> Save Changes
                </button>
                
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}