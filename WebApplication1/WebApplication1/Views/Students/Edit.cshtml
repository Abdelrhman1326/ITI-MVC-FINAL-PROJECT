@model WebApplication1.Models.Student 
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = $"Edit Student: {Model.Name}";
    SelectList departmentList = (SelectList)ViewData["Departments"];
}

<div class="p-4 bg-white rounded-lg">
    <h2 class="card-header text-black text-center text-primary fw-bold">@ViewData["Title"]</h2>
    <div class="card-body">
        
        <form asp-action="Edit" method="post">
            @* Displays model-level validation errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 border border-danger p-2 rounded"></div>
            
            @* Hidden field for the primary key *@
            <input type="hidden" asp-for="StudentId" />

            @* Name Field (mb-2 for spacing) *@
            <div class="mb-2">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            @* Address Field (mb-2 for spacing) *@
            <div class="mb-2">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>
            
            @* Grade Field (mb-2 for spacing) *@
            <div class="mb-2">
                <label asp-for="Grade" class="form-label fw-bold"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="DeptId" class="form-label fw-bold">Department Name</label>
                <select asp-for="DeptId" class="form-control" asp-items="departmentList"> 
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="DeptId" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between pt-3">
                <button type="submit" class="btn btn-warning shadow-sm">
                    <i class="bi bi-pencil-square"></i> Save Changes
                </button>
                
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}