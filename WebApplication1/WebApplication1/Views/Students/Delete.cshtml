@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this Student?</h4>
<div>
    <h5>@Model.Name</h5>
    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        // Get the form element
        var deleteForm = document.getElementById('deleteForm');

        // Add an event listener to the form submission
        deleteForm.addEventListener('submit', function(event) {
            // Display the confirmation dialog
            var confirmation = confirm("Are you absolutely sure you want to delete this student? This action cannot be undone.");

            // If the user clicks 'Cancel', prevent the form submission
            if (!confirmation) {
                event.preventDefault();
                // Optionally log to console or provide visual feedback
                console.log("Deletion cancelled by user.");
            }
        });
    </script>
}