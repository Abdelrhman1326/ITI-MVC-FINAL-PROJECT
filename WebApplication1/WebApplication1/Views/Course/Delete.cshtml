@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="p-4 bg-white rounded-lg shadow-sm">
    <h1 class="text-danger">Delete Course</h1>
    
    <h4 class="mt-4">Are you absolutely sure you want to delete this course?</h4>
    <p class="alert alert-warning">
        **Warning:** Deleting the course **@Model.Name** cannot be undone.
    </p>

    <div class="card card-body bg-light">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.MinimumDegree)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MinimumDegree)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Hours)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Hours)
            </dd>
            
            <dt class="col-sm-3 fw-bold">
                Department ID
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DeptId)
            </dd>
        </dl>
    </div>

    <hr/>
    <form asp-action="Delete" id="deleteForm" method="post" class="mt-3">
        @* The hidden input must be bound to the primary key property, which is 'Id' in your Course model *@
        <input type="hidden" asp-for="Id" />
        
        <button type="submit" class="btn btn-danger shadow-sm">
            <i class="bi bi-trash"></i> Delete Course
        </button>
        
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>

@section Scripts {
    <script>
        // Get the form element
        var deleteForm = document.getElementById('deleteForm');

        // Add an event listener to the form submission
        deleteForm.addEventListener('submit', function(event) {
            // Display the confirmation dialog
            var confirmation = confirm("Are you absolutely sure you want to delete the course '@Model.Name'? This action cannot be undone.");

            // If the user clicks 'Cancel', prevent the form submission
            if (!confirmation) {
                event.preventDefault();
                console.log("Deletion cancelled by user.");
            }
        });
    </script>
}