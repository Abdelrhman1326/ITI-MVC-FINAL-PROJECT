@model WebApplication1.Models.Course 

@{
    ViewData["Title"] = "Create New Course";
}

<div class="p-4 bg-white rounded-lg">
    <h2 class="card-header text-black text-center text-primary fw-bold">@ViewData["Title"]</h2>
    <div class="card-body">

        <form asp-action="Create" method="post">
            @* Displays model-level validation errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 border border-danger p-2 rounded"></div>
            
            @* Name Field *@
            <div class="mb-2">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            @* MinimumDegree Field *@
            <div class="mb-2">
                <label asp-for="MinimumDegree" class="form-label fw-bold"></label>
                <input asp-for="MinimumDegree" class="form-control" />
                <span asp-validation-for="MinimumDegree" class="text-danger small"></span>
            </div>
            
            @* Hours Field *@
            <div class="mb-2">
                <label asp-for="Hours" class="form-label fw-bold"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger small"></span>
            </div>

            @* DeptId (Foreign Key) Field *@
            <div class="mb-2">
                <label asp-for="DeptId" class="form-label fw-bold">Department ID</label>
                <input asp-for="DeptId" class="form-control" /> 
                <span asp-validation-for="DeptId" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between pt-3">
                <button type="submit" class="btn btn-success shadow-sm">
                    <i class="bi bi-plus-circle"></i> Create Course
                </button>
                
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}