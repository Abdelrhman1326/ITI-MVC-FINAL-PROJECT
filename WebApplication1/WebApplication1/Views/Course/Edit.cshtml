@model WebApplication1.Models.Course 
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = $"Edit Course: {Model.Name}"; // Title change
    // Retrieve SelectLists from ViewData (Controller must pass this)
    SelectList departmentList = (SelectList)ViewData["Departments"];
    SelectList instructorList = (SelectList)ViewData["Instructors"];
}

<div class="p-4 bg-white rounded-lg">
    <h2 class="card-header text-black text-center text-primary fw-bold">@ViewData["Title"]</h2>
    <div class="card-body">

        <form asp-action="Edit" method="post">
            
            <input type="hidden" asp-for="Id" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 border border-danger p-2 rounded"></div>
            
            <div class="mb-2">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="MinimumDegree" class="form-label fw-bold"></label>
                <input asp-for="MinimumDegree" class="form-control" />
                <span asp-validation-for="MinimumDegree" class="text-danger small"></span>
            </div>
            
            <div class="mb-2">
                <label asp-for="Hours" class="form-label fw-bold"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="DeptId" class="form-label fw-bold">Department Name</label>
                <select asp-for="DeptId" class="form-control" asp-items="departmentList"> 
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="DeptId" class="text-danger small"></span>
            </div>
            
            <hr/>
            
            <div class="mb-2">
                <label for="selectedInstructorId" class="form-label fw-bold">Assign Primary Instructor</label>
                <select name="selectedInstructorId" id="selectedInstructorId" class="form-control" asp-items="instructorList">
                    <option value="">-- Select an Instructor (Optional) --</option>
                </select>
            </div>

            <div class="d-flex justify-content-between pt-3">
                <button type="submit" class="btn btn-warning shadow-sm">
                    <i class="bi bi-pencil-square"></i> Save Changes @* 🔥 Button text change *@
                </button>
                
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}