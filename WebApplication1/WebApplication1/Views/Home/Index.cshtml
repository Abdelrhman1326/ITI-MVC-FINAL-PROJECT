@{
    // Sets the title for the browser tab
    ViewData["Title"] = "University Management System";
    
    // You don't need any complex CSS here, the basic layout styles 
    // from your site.css and Bootstrap will handle the structure.
}

<style>
    /* * Minimal, essential styling for the home page 
     * We'll use a very light, off-white background color.
     */
    body {
        background-color: #f8f8ff; /* Ghost White - a clean, soft off-white */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .minimal-hero {
        /* Centers the content vertically and horizontally on the page */
        min-height: 80vh; 
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 2rem;
    }

    .minimal-hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        /* Simple, dark text color for contrast */
        color: #333; 
        margin-bottom: 0.5rem;
    }

    .minimal-hero p {
        font-size: 1.2rem;
        color: #6c757d; /* Muted gray for secondary text */
        max-width: 600px;
    }
</style>

<div class="minimal-hero">
    <h1>University Management System</h1>
    <p>Use the navigation bar above to manage Students, Courses, Instructors, and Departments.</p>
</div>